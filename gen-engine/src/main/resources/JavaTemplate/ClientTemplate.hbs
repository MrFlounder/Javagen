import sun.net.www.protocol.http.HttpURLConnection;
import java.io.DataOutputStream;
import java.net.URL;

public class client {
    {{#each}}
    {{#if postOrPut}}
    public int send{{methodName}}({{#each arguments}}{{type}} {{name}}, {{/each}}
            String baseUrl, String httpMethod)
            throws Exception {
        String url = baseUrl + "/" + "{{endPoint}}";
        HttpURLConnection con = (HttpURLConnection) new URL(url).openConnection();
        con.setRequestMethod(httpMethod);
        con.setRequestProperty("Content-Type","application/json");
        String str =  "{"
        {{#each arguments}}{{#if @last}} + "{{name}}" + ":" + {{name}}{{else}} + "{{name}}" + ":" + {{name}} + ","{{/if}}{{/each}}
        + "}";
        con.setDoOutput(true);
        DataOutputStream wr = new DataOutputStream(con.getOutputStream());
        wr.writeBytes(str);
        wr.flush();
        wr.close();
        int responseCode = con.getResponseCode();
        return responseCode;
    }
    {{else}}
    public int get{{methodName}}({{#each arguments}}{{type}} {{name}}, {{/each}}String baseUrl)
            throws Exception {
        String url = baseUrl + "/" + "{{endPoint}}" + "?"{{#each arguments}}+ "{{name}}" + "=" + {{name}} + "&"{{/each}};
        HttpURLConnection con = (HttpURLConnection) new URL(url).openConnection();
        con.setRequestMethod("GET");
        int responseCode = con.getResponseCode();
        return responseCode;
    }
    {{/if}}
    {{/each}}
}